
@{
    ViewBag.Title = "DriverDetails";
    Layout = "~/Views/Shared/SideNav.cshtml";
}



<html>
<head>
    <script src="~/Scripts/jquery-3.7.1.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>

    <style>
        .btnVehicle {
            background-color: #003459;
            border-color: transparent;
            border-radius: 15px;
            box-shadow: 8px 8px 3px #001524, -8px -8px 3px #00538e;
            color: white;
            cursor: pointer;
            display: inline-block;
            font-weight: 500;
            font-size: 15px;
            padding: 0 18px;
            line-height: 50px;
            text-align: center;
            text-decoration: none;
            user-select: none;
            -webkit-user-select: none;
            touch-action: manipulation;
            width: 200px;
            height: 50px;
            letter-spacing: 5px;
            margin: 15px;
            font-family: Raleway;
        }

            .btnVehicle:hover {
                box-shadow: inset 8px 8px 3px #001524, inset -8px -8px 3px #00538e;
            }
        tr,td,table {
            border: none;
            box-shadow:none;
            
        }

      
      
    </style>
    

</head>

<body>
    <div class="sidebarfloat"></div>
    <div class="centerdiv">
        <h1>DRIVER DETAILS</h1>
    </div>
    <br />

    <div class="leftdiv">


        <label class="txtlbl">FULL NAME: </label>
        <input type="text" id="txt_name" value="" class="txtbox" /> <br />

        <label class="txtlbl">LICENSE: </label>
        <input type="text" id="txt_license" value="" class="txtbox" /> <br />

        <label class="txtlbl">ADDRESS: </label>
        <input type="text" id="txt_address" value="" class="txtbox" /> <br />

        <label class="txtlbl">EMAIL: </label>
        <input type="text" id="txt_email" value="" class="txtbox" style="text-transform:none" /> <br />

        <label class="txtlbl">PHONE NUMBER: </label>
        <input type="text" id="txt_phonenum" value="" class="txtbox" /> <br />

        <label class="txtlbl">ACCOUNT BALANCE: </label>
        <input type="text" id="txt_bal" value="" class="txtbox" /> <br />
        <br /><br /><br />

        <button id="btn_license" class="btnDets"> VIEW LICENSE</button>
        <button id="btn_pic" class="btnDets"> VIEW IMAGE</button>

    </div>
    <div class="rightdiv">
        <table class="noTable">

            <tbody id="tbody"></tbody>
        </table>
    </div>

    <script type="module" src="~/Scripts/myScripts/Driver/DriverDetails.js"></script>
</body>
</html>
