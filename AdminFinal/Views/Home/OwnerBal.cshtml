
@{
    ViewBag.Title = "OwnerBal";
    Layout = "~/Views/Shared/SideNav.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <script src="~/Scripts/jquery-3.7.1.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>

    <style>
        body {
            margin: 0;
            box-sizing: border-box;
            height: 100%;
        }

        #pagination1 {
            position: absolute;
            bottom: 0;
            padding-bottom: 20px;
            left: 55%;
            transform: translateX(-50%);
        }

        /* Style for the pagination buttons */
        .pageBtn {
            background-color: #00538f;
            display: inline-block;
            font-size: 13px;
            line-height: 29px;
            padding: 0 10px 0 11px;
            position: relative;
            text-align: center;
            text-decoration: none;
            user-select: none;
            -webkit-user-select: none;
            touch-action: manipulation;
            vertical-align: middle;
            margin: 5px;
            border: none;
            color: white;
            width: 40px;
            height: 40px;
            border-radius: 2px;
            /* box-shadow: 5px 5px 0px #003357, -5px -5px 0px #00538f;*/
        }

            /* Style for the active pagination button */
            .pageBtn.active {
                color: #e2c946;
                background: #004373;
                box-shadow: inset 1px 1px 2px #003357, inset -1px -1px 2px #00538f;
            }

            /* Optional: Add hover effect for better user experience */
            .pageBtn:hover {
                background: #004373;
                box-shadow: inset 5px 5px 4px #003357, inset -5px -5px 4px #00538f;
            }
    </style>
</head>
<body>

    <div class="sidebarfloat"></div>

    <div class="centerdiv">
        <h1>OWNER TRANSACTIONS</h1>

        <div class="tbl-header">
            <table>
                <thead>
                    <tr>

                        <th>NAME</th>
                        <th>AMOUNT</th>
                        <th>DATE</th>
                        <th>TIME</th>
                        <th>TYPE</th>
                        <th>REFERENCE NUM</th>
                    </tr>
                </thead>
                <tbody id="tbody"></tbody>
            </table>
            @*<div id="pagination1">

                </div>*@
            <div id="pagination" class="page-container">
                    <button id="prevBtn" class="prevBtn">Previous Page</button>
                    <button id="currentPage" class="pageNum" value=""></button>
                    <button id="nextBtn" class="nextBtn">Next Page</button>
                </div>
        </div>





    </div>
    <script type="module" src="~/Scripts/myScripts/OwnerBal.js"></script>
</body>
</html>

